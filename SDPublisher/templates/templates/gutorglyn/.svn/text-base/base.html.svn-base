<!--  {% load verbatim %} -->  
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd"> 
<html>
    <head>
        <title>Gwaith Guto'r Glyn</title>
        <meta http-equiv="content-type" content="text/html; charset=utf-8" /> 
        <link type="text/css" rel="stylesheet" href="/static/blueprint/screen.css" media="screen, projection"/>     

         <!--[if lt IE 8]><link rel="stylesheet" href="/static/blueprint/ie.css" type="text/css" media="screen, projection"><![endif]-->
        
        <link type="text/css" rel="stylesheet" href="/static/css/gutorglyn.css" media="screen, projection"/>         
        <link type="text/css" rel="stylesheet" href="/static/css/jquery-ui-1.8.11.custom.css"  />             
        <link type="text/css" rel="stylesheet" href="/static/css/slidingpanel.css" media="screen, projection"/>       
        <link type="text/css" rel="stylesheet"  href="/static/css/jquery.lightbox-0.5.css" media="screen" />           
   
        <link type="text/css" rel="stylesheet" href="/static/blueprint/print.css" media="print"/>        

        <script type="text/javascript" src="/static/js/jquery-1.5.1.min.js"></script>
        <script type="text/javascript" src="/static/js/jquery-ui-1.8.11.custom.min.js"></script>        
        <script type="text/javascript" src="/static/js/jquery.lightbox-0.5.js"></script>

        <script type="text/javascript">
$(document).ready(function() {

$("#tabs").tabs();
$("#notes-tab").tabs();

$(".trigger").click(function(){
		$(".panel").toggle("fast");
		$(this).toggleClass("active");
		return false;
	});

$('#gallery a').lightBox();

$( "#dialog" ).dialog({
	autoOpen: false,
	show: "blind",
	hide: "explode"
	});

$( "#opener" ).click(function() {
	$( "#dialog" ).dialog( "open" );
	   return false;
	});
	
$("#poem").live("change keyup", function () {
                $("#poem-select").submit();
            });	

});

        </script>
   
    </head>
    <body>
        <div class="container">
            <hr class="space" />
            <div class="prepend-1 span-12 top-head">
                <h1><a href="/gutorglyn/poem/016">Gwaith Guto'r Glyn</a></h1>
            </div>            
            <div class="span-11 last">
                <!-- Poem Selector Drop Down -->
                <form method="GET" action="/gutorglyn/poem/" id="poem-select">
                    <select id="poem" name="poem">
                        <option value="#">Goto Poem...</option>
                        <option value="/gutorglyn/poem/001">1</option>
                        <option value="/gutorglyn/poem/002">2</option>
                        <option value="/gutorglyn/poem/003">3</option>
                        <option value="/gutorglyn/poem/012">12</option>
                        <option value="/gutorglyn/poem/016">16</option>
                        <option value="/gutorglyn/poem/018">18</option>
                        <option value="/gutorglyn/poem/018a">18a</option>
                    </select>
                </form>
                <!-- Poem Selector Drop Down End -->
                <!-- Home link and Search Box -->
                <form method="GET" action="/gutorglyn/search/">
                <a href="/gutorglyn/poem/016">Home</a> | <label for="searchVal">Search Edited Texts: </label><input type="text" name="searchVal" title="search" id="searchVal" value="Pond rhyfedd"/>
                <input type="submit" value="Search" />
                </form>
                <!-- Home link and Search Box End-->
                </div>             
            <hr style="color:red;background-color: red; height:8px;"/>
              
            <!-- Poem Title -->
                <div class="prepend-1 span-20 last" id="main-title">
                {% block poemTitleMain %}{% endblock %} 
                </div>
            <!-- Poem Title End --> 
                <div class="column span-10" id="col-1">
            <!-- Editor information -->
                <div class="prepend-1 span-9" id="editor-title"><i>Golygwyd gan: {% block editor %}{% endblock %}</i></div>                    
                <div class="span-9"> 
                <hr class="space" />                
            <!-- Editor information end --> 
            <!-- Edited Text -->                
                {% block editedText %}{% endblock %}         
            <!-- Edited Text end -->  
                </div>
                    </div>
            <!-- Tab Area -->
                    <div class="span-14 last">
                        <hr class="space"/>
                <div id="tabs">
                    <ul>
                        <li><a href="#paraphrase-tab"><span>Aralleiriad</span></a></li>
                        <li><a href="#translation-tab"><span>Translation</span></a></li>
                        <li><a href="#notes-tab"><span>Nodiadau</span></a></li>
                        <li><a href="#stemma-tab"><span>Stemma</span></a></li>
                    </ul>
                    <div id="paraphrase-tab"> {% block paraphrase %}{% endblock %} </div>
                    <div id="translation-tab"> {% block translation %}{% endblock %} </div>
                    <div id="notes-tab">
                        <ul>
                            <li><a href="#subtab1"><span>Testunol</span></a></li>
                            <li><a href="#subtab2"><span>Esboniadol</span></a></li>
                            <li><a href="#subtab3"><span>English Explanatory Notes</span></a></li>
                        </ul>
                        <div id="subtab1">{% block textNotes %}{% endblock %}</div>
                        <div id="subtab2">{% block exNotes %}{% endblock %}</div>
                        <div id="subtab3">{% block exEngNotes%}{% endblock %}</div>
                    </div>
                    <div id="stemma-tab">
                        <div id="dialog" title="{% block poemTitleNav %}{% endblock %}">
                            <iframe width="100%" height="80%" src="/static/img/guto02stema.png"></iframe>
                        </div>
                        <button id="opener">Breakout Stemma</button>
                        <iframe width="100%" height="100%" src="/static/img/guto02stema.png"></iframe>
                    </div>
                </div>
            </div>
                </div>
            <!-- Tab Area End -->
        
        <div class="panel">
            <div style="clear:both;"></div> 
            <div class="columns"> 
                <div class="colleft">
                    <h3>Audio</h3>
                    <ul> 
                        <li>
                            <a href="/static/img/audio.wmv" title="Awdio">
                                Awdio
                            </a>
                        </li>
                    </ul>
                    <h3>Stemma</h3>
                    <ul> 
                        <li>
                            <a href="/static/img/guto02stema.png" title="View Stemma">
                                View Stemma Full Screen
                            </a>
                        </li>
                    </ul>
                    <div id="gallery">
                        <ul> 
                            <li>
                                <a href="/static/img/guto02stema.png" title="View Stemma">
                                    View Stemma Lightbox
                                </a>
                            </li>                   
                        </ul>
                    </div>
                    <h3>Poems</h3>
                    <ul>
                        <li><a href="/gutorglyn/poem/001" title="Guto 1">Guto 1</a></li>
                        <li><a href="/gutorglyn/poem/002" title="Guto 2">Guto 2</a></li>
                        <li><a href="/gutorglyn/poem/003" title="Guto 3">Guto 3</a></li>
                        <li><a href="/gutorglyn/poem/012" title="Guto 12">Guto 12</a></li>
                        <li><a href="/gutorglyn/poem/016" title="Guto 16">Guto 16</a></li>
                        <li><a href="/gutorglyn/poem/018" title="Guto ">Guto 18</a></li>
                        <li><a href="/gutorglyn/poem/018a" title="Guto 18a">Guto 18a</a></li>       
                    </ul>                  
                </div> 
                <div class="colright"> 
                    <h3>Manuscript Images</h3> 
                    <ul> 
                        <li>
                            <a href="/static/img/manuscript1_full.gif" title="Manuscript Image 1">
                                <img src="/static/img/manuscript1_small.gif" name="Manuscript Image 1"/>
                            </a>
                        </li>
                        <li>
                            <a href="/static/img/manuscript2_full.gif" title="Manuscript Image2">
                                <img src="/static/img/manuscript2_small.gif" name="Manuscript Image 2"/>
                            </a>
                        </li>
                        <li>
                            <a href="/static/img/manuscript3_full.gif" title="Manuscript Image3">
                                <img src="/static/img/manuscript3_small.gif" name="Manuscript Image 3"/>
                            </a>
                        </li>
                    </ul>                    
                </div> 
            </div>             
            <div style="clear:both;"></div>
            <div style="clear:both;"></div>
        </div>
        <a class="trigger" href="#"></a>
    </body>
</html>
