#main-title {
    font-size:1.5em;    
}

.top-nav a {
    font-size:1.5em;
}

#editor {
    font-size:1em;    
}

.top-head a {
    text-decoration:none;
    color: #000000;
    font-family: georgia;
}
.top-head a:hover {
    color: #000000;
}
.top-head a:visited {
    text-decoration:none;
    color: #000000;
}
#black-bar{
    background-color: #3D3D3D;
    color: white;
    text-align: right;
}
form {
    float:left;
}

/* Tabs */

#edited-text {
    width: 400px;
    height: 200px;
    overflow: auto;
}

#paraphrase-tab {
    width: 500px;
    height: 356px;
    overflow: scroll;
}

#translation-tab{
    width: 500px;
    height: 356px;
    overflow: scroll;
}

#notes-tab {
    width: 500px;
    height: 356px;
    overflow: auto;
}

#stemma-tab {
    width: 500px;
    height: 356px;
    overflow: scroll;
}

#stemma-img, #stemma-img-dialog {
    cursor:move;
}

#transcriptions-tab {
    width: 500px;
    height: 356px;
    overflow: scroll;
}

#transcript-title {
    font-weight: bold;
}

a.variant-line:link {text-decoration: none; color: black;}
a.variant-line:visited {text-decoration: none; color: black;}
a.variant-line:hover {text-decoration: none; color: black; background-color: #ccc;}
a.variant-line:active {text-decoration: none; color: black;}


