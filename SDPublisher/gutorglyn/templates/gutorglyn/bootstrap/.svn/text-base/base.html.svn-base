{% load i18n %}
<!DOCTYPE html>
<html>
<head>
<title>{{ page_title }}</title>
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">

{% include "gutorglyn/bootstrap/js.html" %}
{% include "gutorglyn/bootstrap/css.html" %}

<script type="text/javascript">
$(document).ready(function () {
	$("#title").load("/gutorglyn/service/?v=titleCy&p=001");
	$("#edited-text").load("/gutorglyn/service/?v=editedText&p=001");
	$("#paraphrase").load("/gutorglyn/service/?v=paraphrase&p=001");
	$("#translation").load("/gutorglyn/service/?v=translation&p=001");
	$("#explanatory-notes").load("/gutorglyn/service/?v=exNotes&p=001");	
	$("#text-notes").load("/gutorglyn/service/?v=textNotes&p=001");
	$("#english-explanatory-notes").load("/gutorglyn/service/?v=exEngNotes&p=001");	
});
</script>

<style type="text/css">

</style>
<body>
<header role="banner" id="top" class="navbar navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button data-target=".bs-navbar-collapse" data-toggle="collapse" type="button" class="navbar-toggle">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Gutorglyn.net</a>
    </div>
    <nav role="navigation" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li>
          <a href="#">Y Golygiad</a>
        </li>
        <li>
          <a href="#">Adnoddau</a>
        </li>
        <li>
          <a href="#">Cymru Guto</a>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="#">Cymraeg</a></li>
      </ul>
    </nav>
  </div>
</header>
<div class="container-liquid">
	<div class="row-fluid">
		<div 	id="title"></div>
		<div class="editor-title">
			<i>{% trans "Edited by" %} {% block editor %}{{ editor|safe }}{% endblock %}</i>
		</div>
		<div class="col-md-4" id="edited-text"></div>
		<div class="col-md-8">
		{% include "gutorglyn/bootstrap/tabs.html" %}
		</div>
	</div>	
</div>
</body>
</html>
